<div class="p-1 mb-3 border-top border-2">
  <h1
    class="text-capitalize p-1 post d-flex justify-content-between align-items-center bg-info-subtle border-bottom border-info border-2"
  >{{title}}</h1>
  <p class="p-3 mb-2">{{post.content}}</p>
</div>
{{#if author}}
  <p class="p-3 mb-2"><a href="/dashboard/edit/{{post.id}}">Edit</a>
    <button class="delete-post-btn btn-sm btn-dark" data-id="{{post.id}}">Delete</button></p>
{{/if}}
<div class="mb-2">
  <span class="p-3 mb-2">Posted by
    {{post.user.username}}
    on
    {{format_date post.createdAt}}</span>
</div>
<div class="border border-2 bg-body-secondary">
  <h2 class="p-3 mb-2">Comments</h2>
  {{#if loggedIn}}
    <form
      class="new-comment-form p-3 mb-2 bg-body-secondary"
      data-postid="{{post.id}}"
    >
      <textarea name="body" placeholder="Add a comment"></textarea>
      <button type="submit" class="m-3 btn btn-sm btn-dark">Submit</button>
    </form>
  {{else}}
    <p><a href="/login">Log in</a> to leave a comment.</p>
  {{/if}}
  {{#if post.comments}}
    {{#each post.comments}}
      <div class="p-3 mb-2 border-top border-2 bg-light">
        <span>{{user.username}} commented on {{format_date createdAt}}</span>
        <p>{{body}}</p>
      </div>
    {{/each}}
  {{else}}
    <p>No comments to display.</p>
  {{/if}}
</div>
<script src="/js/comments.js"></script>